<h1>Sign Up </h1>
<%= bootstrap_form_for @user do |f| %>

	<% if @user.errors.any? %>
		<h2>Error:</h2>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %> </li>
			<% end %>
		</ul>
	<% end %>

  <%= f.text_field :username %>
  <%= f.password_field :password %>
  <%= f.text_field :email %>
  <%= f.submit "Sign Up" %>
<% end %>